{
  "name": "calbridge-sync",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "sync-daemon": "dist/src/cli.js"
  },
  "description": "Local daemon to sync Outlook calendar events to Google Calendar",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "start": "node dist/src/cli.js start",
    "once": "node dist/src/cli.js once",
    "health": "node dist/src/cli.js health",
    "cron-setup": "node scripts/cron-setup.mjs",
    "cron:setup": "npm run cron-setup",
    "test": "vitest run"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.0",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "pino": "^9.6.0",
    "rrule": "^2.8.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.10",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
